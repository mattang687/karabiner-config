{
    "description": "Caps Lock as Cmd/Esc and Space as Navigation Layer",
    "manipulators": [
        {
            "description": "Caps Lock: Hold for Cmd, Tap for Escape",
            "from": {
                "key_code": "caps_lock",
                "modifiers": { "optional": ["any"] }
            },
            "to": [{ "key_code": "left_command" }],
            "to_if_alone": [{ "key_code": "escape" }],
            "type": "basic"
        },
        {
            "conditions": [
                {
                    "name": "space_held",
                    "type": "variable_if",
                    "value": 1
                }
            ],
            "description": "Space + H -> Left Arrow",
            "from": {
                "key_code": "h",
                "modifiers": { "optional": ["shift", "command", "option", "control"] }
            },
            "to": [{ "key_code": "left_arrow" }],
            "type": "basic"
        },
        {
            "conditions": [
                {
                    "name": "space_held",
                    "type": "variable_if",
                    "value": 1
                }
            ],
            "description": "Space + J -> Down Arrow",
            "from": {
                "key_code": "j",
                "modifiers": { "optional": ["shift", "command", "option", "control"] }
            },
            "to": [{ "key_code": "down_arrow" }],
            "type": "basic"
        },
        {
            "conditions": [
                {
                    "name": "space_held",
                    "type": "variable_if",
                    "value": 1
                }
            ],
            "description": "Space + K -> Up Arrow",
            "from": {
                "key_code": "k",
                "modifiers": { "optional": ["shift", "command", "option", "control"] }
            },
            "to": [{ "key_code": "up_arrow" }],
            "type": "basic"
        },
        {
            "conditions": [
                {
                    "name": "space_held",
                    "type": "variable_if",
                    "value": 1
                }
            ],
            "description": "Space + L -> Right Arrow",
            "from": {
                "key_code": "l",
                "modifiers": { "optional": ["shift", "command", "option", "control"] }
            },
            "to": [{ "key_code": "right_arrow" }],
            "type": "basic"
        },
        {
            "conditions": [
                {
                    "name": "space_held",
                    "type": "variable_if",
                    "value": 1
                }
            ],
            "description": "Space + U -> Page Up",
            "from": {
                "key_code": "u",
                "modifiers": { "optional": ["shift", "command", "option", "control"] }
            },
            "to": [{ "key_code": "page_up" }],
            "type": "basic"
        },
        {
            "conditions": [
                {
                    "name": "space_held",
                    "type": "variable_if",
                    "value": 1
                }
            ],
            "description": "Space + N -> Page Down",
            "from": {
                "key_code": "n",
                "modifiers": { "optional": ["shift", "command", "option", "control"] }
            },
            "to": [{ "key_code": "page_down" }],
            "type": "basic"
        },
        {
            "conditions": [
                {
                    "name": "space_held",
                    "type": "variable_if",
                    "value": 1
                }
            ],
            "description": "Space + I -> Home",
            "from": {
                "key_code": "i",
                "modifiers": { "optional": ["shift", "command", "option", "control"] }
            },
            "to": [{ "key_code": "home" }],
            "type": "basic"
        },
        {
            "conditions": [
                {
                    "name": "space_held",
                    "type": "variable_if",
                    "value": 1
                }
            ],
            "description": "Space + O -> End",
            "from": {
                "key_code": "o",
                "modifiers": { "optional": ["shift", "command", "option", "control"] }
            },
            "to": [{ "key_code": "end" }],
            "type": "basic"
        },
        {
            "description": "Space: Set variable when held",
            "from": {
                "key_code": "spacebar",
                "modifiers": { "optional": ["any"] }
            },
            "to": [
                {
                    "set_variable": {
                        "name": "space_held",
                        "value": 1
                    }
                }
            ],
            "to_after_key_up": [
                {
                    "set_variable": {
                        "name": "space_held",
                        "value": 0
                    }
                }
            ],
            "to_if_alone": [{ "key_code": "spacebar" }],
            "type": "basic"
        }
    ]
}
